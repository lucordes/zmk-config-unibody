//ZMK_COMBO(pwr,  &kp C_POWER, 0 4, ALL)
    combos {
        compatible = "zmk,combos";
        combo_pwr {
            timeout-ms = <50>;
            key-positions = <0 4>;
            bindings = <&kp C_POWER>;
        };

            combo_five {
            timeout-ms = <50>;  // You may adjust this value based on your requirements
            key-positions = <3 13>;
            bindings = <&kp N5>;
        };
            combo_sixde {
            timeout-ms = <50>;  // You may adjust this value based on your requirements
            key-positions = <6 16>;
            bindings = <&kp N6>;
            layers = <BASEDE>;
        };
            combo_sixus {
            timeout-ms = <50>;  // You may adjust this value based on your requirements
            key-positions = <6 16>;
            bindings = <&number6us>;
            layers = <BASEUSINT SYMUSINT>;
        };
            combo_up {
            timeout-ms = <20>;  // You may adjust this value based on your requirements
            key-positions = <11 12 13>;
            bindings = <&kp UP>;
        };
            combo_down {
            timeout-ms = <20>;  // You may adjust this value based on your requirements
            key-positions = <11 13>;
            bindings = <&kp DOWN>;
        };
            combo_right {
            timeout-ms = <20>;  // You may adjust this value based on your requirements
            key-positions = <12 13>;
            bindings = <&kp RIGHT>;
        };
            combo_left {
            timeout-ms = <20>;  // You may adjust this value based on your requirements
            key-positions = <11 12>;
            bindings = <&kp LEFT>;
        };
            combo_scCombo {
            timeout-ms = <50>;  // You may adjust this value based on your requirements
            key-positions = <12 22>;
            bindings = <&scModMorph>;
            layers = <BASEDE BASEUSINT>;
        };
            combo_ecommaCombo {
            timeout-ms = <50>;  // You may adjust this value based on your requirements
            key-positions = <17 27>;
            bindings = <&ecomma>;
            layers = <BASEDE BASEUSINT>;
        };
    };







